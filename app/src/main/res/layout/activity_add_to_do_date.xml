<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AddToDoDateActivity">
    <EditText
        android:id="@+id/titleBox"
        android:hint="enter a title..."
        android:ems="14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />
    <EditText
        android:id="@+id/dateBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="select a date..."
        app:layout_constraintLeft_toLeftOf="@id/titleBox"
        app:layout_constraintRight_toLeftOf="@id/dateBtn"
        app:layout_constraintTop_toBottomOf="@id/titleBox"
        />
    <ImageButton
        android:id="@+id/dateBtn"
        android:src="@drawable/ic_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleBox"
        app:layout_constraintRight_toRightOf="@id/titleBox"
        />
    <ListView
        android:id="@+id/todoEditView"
        android:layout_width="0dp"
        android:layout_height="256dp"
        app:layout_constraintTop_toBottomOf="@id/dateBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:minHeight="256dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/dateFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/todoEditView"
        app:layout_constraintBottom_toBottomOf="@id/todoEditView"
        android:src="@drawable/ic_add"
        android:layout_margin="16dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/todoEditView"
        app:layout_constraintLeft_toLeftOf="@id/todoEditView"
        app:layout_constraintTop_toBottomOf="@id/todoEditView"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>
        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />
        <ImageButton
            android:id="@+id/acceptBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_green"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>